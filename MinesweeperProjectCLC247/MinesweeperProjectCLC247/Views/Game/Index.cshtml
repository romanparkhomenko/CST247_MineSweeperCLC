@model  MinesweeperProjectCLC247.Models.GameBoardModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #gameboardPartial table {
        border: 1px solid;
        border-color: black;
        border-collapse: collapse;
        border: 0;
    }

    #gameboardPartial td {
        border-color: black;
        border: 1px solid;
        background-color: #BCBCBC;
        width: 32px;
        height: 32px;
        text-align: center;
        font-weight: bold;
        vertical-align: middle;
        padding: 0;
    }

    h2 {
        color: black;
    }

    div.game-info {
        display: flex;
        width: 100%;
        padding: 1rem;
    }

    div.clicks-container, div.reset-game-button {
        flex: 1 0 auto;
        display: flex;
        justify-content: center;
        width: 50%;
        color: black;
    }

    .reset-game-button input {
        background: #522398;
        color: white;
        transition: all 250ms;
    }

    .reset-game-button input:hover {
        background: #7537d1;
        color: white;
        transition: all 250ms;
    }
</style>

<h2 align="center">
    Minesweeper
</h2>

<div class="container-fluid">
    <div class="row">
        
        <div class="col-lg-8 col-lg-offset-2">
            <!-- Gameboard -->
            <div id="gameboardPartial">
                @{ Html.RenderPartial("Game", Model); }
            </div>
        </div>

        <div class="col-lg-8 col-lg-offset-2">
            <!-- Published Table -->
            <div id="gameboardPartial">
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js" type="text/javascript"></script>
    <script>
        $.get("/GameService.svc/api/GetAllStats/", function (data) {
            console.log(data);
        });
    </script>
}
