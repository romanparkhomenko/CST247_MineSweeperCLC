@model  MinesweeperProjectCLC247.Models.GameBoardModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #gameboardPartial table {
        border: 1px solid;
        border-color: black;
        border-collapse: collapse;
        border: 0;
    }

    #gameboardPartial td {
        border-color: black;
        border: 1px solid;
        background-color: #BCBCBC;
        width: 32px;
        height: 32px;
        text-align: center;
        font-weight: bold;
        vertical-align: middle;
        padding: 0;
    }

    h2 {
        color: black;
    }
</style>

<h2 align="center">
    Minesweeper
</h2>

<div class="container-fluid">
    <div class="row">
        <!-- TITLE -->
    </div>

    <div class="row">
        
        <div class="col-lg-8 col-lg-offset-2">
            <!-- Gameboard -->
            <div id="gameboardPartial">
                @{ Html.RenderPartial("Game", Model); }
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js" type="text/javascript"></script>
}
